<%- include('partials/header', { title: 'Admin Dashboard', user: user }) %> <%-
include('partials/nav', { user: user }) %>

<div class="admin-container">
  <h1>Admin Dashboard</h1>

  <div class="admin-sections">
    <!-- Manage Handymen Section -->
    <div class="admin-card">
      <div class="card-header">
        <h2>Manage Handymen</h2>
        <a href="/admin/add-handyman" class="cta-button">Add New Handyman</a>
      </div>
      <ul class="admin-list">
        <% handymen.forEach(handyman => { %>
        <li class="admin-list-item">
          <div class="item-info">
            <span class="item-name"><%= handyman.name %></span>
            <span class="item-price">#<%= handyman.pricePerKg %> per Kg</span>
          </div>
          <div class="item-actions">
            <a
              href="/admin/edit-handyman/<%= handyman._id %>"
              class="action-button edit-button"
              >Edit</a
            >
            <form
              action="/admin/delete-handyman/<%= handyman._id %>"
              method="POST"
              class="delete-form"
            >
              <button type="submit" class="action-button delete-button">
                Delete
              </button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>

    <!-- Manage Users Section -->
    <div class="admin-card">
      <div class="card-header">
        <h2>Manage Users</h2>
        <a href="/admin/add-user" class="cta-button">Add New User</a>
      </div>
      <ul class="admin-list">
        <% users.forEach(user => { %>
        <li class="admin-list-item">
          <div class="item-info">
            <span class="item-name"><%= user.name %></span>
            <span class="item-email"><%= user.email %></span>
          </div>
          <div class="item-actions">
            <a
              href="/admin/edit-user/<%= user._id %>"
              class="action-button edit-button"
              >Edit</a
            >
            <form
              action="/admin/delete-user/<%= user._id %>"
              method="POST"
              class="delete-form"
            >
              <button type="submit" class="action-button delete-button">
                Delete
              </button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>

    <!-- Manage Orders Section -->
    <div class="admin-card">
      <h2>Manage Orders</h2>
      <ul class="admin-list">
        <% orders.forEach(order => { %>
        <li class="admin-list-item">
          <div class="item-info">
            <span class="item-order"
              >Order by
              <strong
                ><%= order.user ? order.user.name : "Unknown User" %></strong
              ></span
            >
            <span class="item-details"
              >for <strong><%= order.quantityKg %> kg</strong> from
              <strong
                ><%= order.handyman ? order.handyman.name : "Unknown Handyman"
                %></strong
              ></span
            >
            <span class="item-status"
              >Status: <strong><%= order.status %></strong></span
            >
          </div>
          <div class="item-actions">
            <a href="/orders/<%= order._id %>" class="action-button view-button"
              >View Details</a
            >
          </div>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<a href="/" class="back-home-link">Go Back to Home</a>

<%- include('partials/footer') %>
